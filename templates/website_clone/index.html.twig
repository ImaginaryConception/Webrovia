{% extends 'base.html.twig' %}

{% block title %}Cloner un site web{% endblock %}

{% block page_title %}Cloner un site web{% endblock %}
{% block page_subtitle %}Clonez n'importe quel site web en quelques clics{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <div class="p-6 space-y-6">
                        {% for message in app.flashes('success') %}
                            <div class="rounded-md bg-green-50 dark:bg-green-900/50 p-4 mb-4">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-check-circle text-green-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-green-800 dark:text-green-200">{{ message }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="rounded-md bg-red-50 dark:bg-red-900/50 p-4 mb-4">
                                <div class="flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-exclamation-circle text-red-400"></i>
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm text-red-800 dark:text-red-200">{{ message }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    {{ form_label(form.website_url, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                                    {{ form_widget(form.website_url, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-primary focus:ring-primary dark:bg-gray-900 dark:text-white text-base p-2'}}) }}
                                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        Entrez l'URL complète du site web que vous souhaitez cloner
                                    </p>
                                    <div class="text-red-600 dark:text-red-400 text-sm">
                                        {{ form_errors(form.website_url) }}
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    {{ form_label(form.project_name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                                    {{ form_widget(form.project_name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-primary focus:ring-primary dark:bg-gray-900 dark:text-white text-base p-2'}}) }}
                                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-folder mr-1"></i>
                                        Donnez un nom à votre projet
                                    </p>
                                    <div class="text-red-600 dark:text-red-400 text-sm">
                                        {{ form_errors(form.project_name) }}
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-4 pt-4">
                                <div class="space-y-2">
                                    {{ form_label(form.clone_type, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                                    <div class="mt-1 space-y-2">
                                        {% for choice in form.clone_type %}
                                            <div class="flex items-center">
                                                {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-primary border-gray-300 dark:border-gray-700 rounded-full focus:ring-primary dark:bg-gray-900'}}) }}
                                                {{ form_label(choice, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-700 dark:text-gray-300'}}) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                                        <i class="fas fa-sitemap mr-1"></i>
                                        Choisissez le type de clonage souhaité
                                    </p>
                                </div>

                                <div class="flex items-center space-x-3">
                                    {{ form_widget(form.include_assets, {'attr': {'class': 'h-4 w-4 text-primary border-gray-300 dark:border-gray-700 rounded dark:bg-gray-900 focus:ring-primary'}}) }}
                                    {{ form_label(form.include_assets, null, {'label_attr': {'class': 'text-sm text-gray-700 dark:text-gray-300'}}) }}
                                </div>
                            </div>

                            <div class="pt-4">
                                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors duration-200">
                                    <i class="fas fa-clone mr-2"></i>
                                    Cloner le site
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}